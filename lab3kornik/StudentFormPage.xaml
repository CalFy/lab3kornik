<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab3kornik.StudentFormPage"
             Title="Додати/Редагувати студента">

    <VerticalStackLayout Padding="10">
        <Entry x:Name="NameEntry" Placeholder="Ім'я"/>
        <Entry x:Name="GroupEntry" Placeholder="Група"/>
        <Entry x:Name="YearEntry" Placeholder="Рік навчання" Keyboard="Numeric"/>

        <Button Text="Зберегти" Clicked="OnSaveClicked"/>
    </VerticalStackLayout>
</ContentPage>
